        // Portfolio Grid
        section#portfolio.page-section
            .container(style="margin-top:50px")
                .row
                    each photo in photos
                        .col-lg-4.col-sm-6.mb-4
                            .portfolio-item
                                -   var img = '/assets' + photo.path
                                -   var title = photo.title
                                img.img-fluid(src=img, alt='' style='height:340px')
                                .portfolio-caption
                                    .portfolio-caption-heading.text-uppercase=title

        // Footer
        footer.footer.py-4
            .container
                .row.align-items-center
                    .col-lg-4.text-lg-left
                        | Copyright © S.C. ELDEROM IMPEX S.R.L. 2021
                    .col-lg-4.my-3.my-lg-0
                        a.btn.btn-dark.btn-social.mx-2(href='#!')
                            i.fab.fa-instagram
                        a.btn.btn-dark.btn-social.mx-2(href='#!')
                            i.fab.fa-facebook-f
                            
